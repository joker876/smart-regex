{
    "name": "smart-regex",
    "version": "1.0.0",
    "description": "[TS] Find & replace, and move the caret!",
    "main": "dist/index.min.js",
    "files": [
        "dist/*"
    ],
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "nodemon dist/index.min.js",
        "tstest": "ts-node-dev --respawn src/index.ts",
        "build": "rmdir /s /Q dist & tsc && terser dist/index.js --output dist/index.min.js --config_file terserconfig.json --comments /^\\*\\n/"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/joker876/smart-regex.git"
    },
    "bugs": {
        "url": "https://github.com/joker876/smart-regex/issues"
    },
    "homepage": "https://github.com/joker876/smart-regex#readme",
    "keywords": [
        "smart",
        "regex",
        "regexp",
        "find",
        "replace",
        "caret",
        "cursor"
    ],
    "author": "joker876",
    "license": "MIT",
    "devDependencies": {
        "nodemon": "^2.0.15",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.6.3"
    }
}
